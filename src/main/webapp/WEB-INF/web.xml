<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>StocksMonitor</display-name>

  <servlet>
    <servlet-name>AddStock</servlet-name>
    <display-name>AddStock</display-name>
    <description></description>
    <servlet-class>ru.constantine.stocksMonitor.servlets.AddStockHandler</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>ListStocks</servlet-name>
    <display-name>ListStocks</display-name>
    <description></description>
    <servlet-class>ru.constantine.stocksMonitor.servlets.ListStocksHandler</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddStock</servlet-name>
    <url-pattern>/add</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ListStocks</servlet-name>
    <url-pattern>/list</url-pattern>
  </servlet-mapping>

</web-app>
